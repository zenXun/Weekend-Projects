{
  "name": "Getting Started Example",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": [
    "https://api.openai.com/*",
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "content_security_policy": "default-src 'self' https://api.openai.com; script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}